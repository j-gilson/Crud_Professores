
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Student {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  course String
}

model Teacher {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  subject String
  hireDate DateTime @default(now())
}